<?xml version="1.0" encoding="utf-8"?>
<!-- So this is the main layout for my "Report Lost Item" page. I'm using a LinearLayout as the main container. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D47A1"
    android:orientation="vertical"
    tools:context=".ReportLostItemActivity">

    <!-- I'm using a Toolbar here to have a nice title and back button at the top of the screen. -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Report Lost Item"
        app:titleTextColor="@color/white" />

    <!-- A ScrollView is important for forms so that if the keyboard pops up, -->
    <!-- the user can still scroll down to see all the fields without anything getting hidden. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- I'm using a TextInputLayout for the text input because it gives a nice floating label effect when you click on it. -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Title"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- I decided to use a GridLayout here to make the 2x3 dropdown menu layout easy to manage. -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:columnCount="2">

                <!-- These are just the text labels for my dropdowns. -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Item Type"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Location Lost"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />

                <!-- These are the actual dropdown menus, which are called Spinners in Android. -->
                <!-- The 'entries' attribute connects them to the lists I made in my strings.xml file. -->
                <Spinner
                    android:id="@+id/spinner_item_type"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_types_array"
                    app:layout_columnWeight="1" />

                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_locations_array"
                    app:layout_columnWeight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Size"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Period Lost"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />

                <!-- For the 'Size' spinner, I left the 'entries' out on purpose. -->
                <!-- I'm going to change its options using my Kotlin code based on what the user picks for 'Item Type'. -->
                <Spinner
                    android:id="@+id/spinner_size"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    app:layout_columnWeight="1" />

                <Spinner
                    android:id="@+id/spinner_period"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_periods_array"
                    app:layout_columnWeight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Colour"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Date Lost"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />

                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_colors_array"
                    app:layout_columnWeight="1" />

                <!-- This is the button that will open up a calendar for the user to pick a date. -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_date_lost"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@android:color/white"
                    android:text="Select Date"
                    android:textColor="@android:color/black"
                    app:icon="@drawable/ic_calendar"
                    app:iconGravity="start"
                    app:iconTint="@android:color/black"
                    app:layout_columnWeight="1" />

            </androidx.gridlayout.widget.GridLayout>

            <!-- This is a multi-line text box for any extra notes the user wants to add. -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Notes"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lines="4"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- This is the final submit button for the form. It will save all the data to the database. -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/white"
                android:text="Submit"
                android:textColor="#0D47A1" />





        </LinearLayout>
    </ScrollView>

</LinearLayout>
