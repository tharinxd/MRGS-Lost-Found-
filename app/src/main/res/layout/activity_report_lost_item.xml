<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D47A1"
    android:orientation="vertical"
    tools:context=".ReportLostItemActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Report Lost Item"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Title"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:columnCount="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Item Type"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Location Lost"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />
                <Spinner
                    android:id="@+id/spinner_item_type"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_types_array"
                    app:layout_columnWeight="1" />
                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_locations_array"
                    app:layout_columnWeight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Size"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Period Lost"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />
                <Spinner
                    android:id="@+id/spinner_size"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    app:layout_columnWeight="1" />
                <Spinner
                    android:id="@+id/spinner_period"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_periods_array"
                    app:layout_columnWeight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Colour"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Date Lost"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1" />
                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/item_colors_array"
                    app:layout_columnWeight="1" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_date_lost"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@android:color/white"
                    android:text="Select Date"
                    android:textColor="@android:color/black"
                    app:icon="@drawable/ic_calendar"
                    app:iconGravity="start"
                    app:iconTint="@android:color/black"
                    app:layout_columnWeight="1" />
            </androidx.gridlayout.widget.GridLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Notes"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lines="4"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/white"
                android:text="Submit"
                android:textColor="#0D47A1" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btn_dashboard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Dashboard"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/homebuttom" />

    </RelativeLayout>

</LinearLayout>