<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- This is the style for the text on my item detail page. -->
    <style name="ItemDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#1AFFFFFF</item> <!-- Semi-transparent white background -->
        <item name="android:padding">12dp</item>
    </style>

    <!-- These are the styles for the dashboard cards -->
    <style name="DashboardCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_height">wrap_content</item>
        <!-- I have removed the two lines causing the error from this style. -->
        <!-- We will add these properties directly in the activity_dashboard.xml file. -->
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="DashboardCardContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DashboardCardIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="tint">@android:color/black</item>
    </style>

    <style name="DashboardCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
